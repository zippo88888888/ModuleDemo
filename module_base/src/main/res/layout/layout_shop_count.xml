<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/shop_count_view_height"
    app:cardCornerRadius="@dimen/shop_count_shape_radius"
    app:cardElevation="0.1dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@drawable/shop_count_shape"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/shop_count_subtractTxt"
            android:layout_width="@dimen/shop_count_view_width"
            android:layout_height="match_parent"
            android:background="?selectableItemBackground"
            android:gravity="center"
            android:text="â€”"
            android:textSize="@dimen/shop_count_txt_size" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/black" />

        <TextView
            android:id="@+id/shop_count_valueTxt"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:background="?selectableItemBackground"
            android:gravity="center"
            android:maxLength="3"
            android:textColor="@color/black"
            android:textSize="@dimen/shop_count_txt_size"
            tools:text="999" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/black" />

        <TextView
            android:id="@+id/shop_count_addTxt"
            android:layout_width="@dimen/shop_count_view_width"
            android:layout_height="match_parent"
            android:background="?selectableItemBackground"
            android:gravity="center"
            android:text="+"
            android:textSize="@dimen/shop_count_txt_size" />

    </LinearLayout>

</androidx.cardview.widget.CardView>

